raph","inlineContent":[{"text":"Approach","type":"text"}]}],[{"type":"paragraph","inlineContent":[{"type":"text","text":"When to Use"}]}],[{"type":"paragraph","inlineContent":[{"text":"Complexity","type":"text"}]}]],[[{"type":"paragraph","inlineContent":[{"inlineContent":[{"text":"Composite View","type":"text"}],"type":"strong"},{"text":" (","type":"text"},{"isActive":true,"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/View","type":"reference"},{"text":" with ","type":"text"},{"code":"body","type":"codeVoice"},{"text":")","type":"text"}]}],[{"inlineContent":[{"type":"text","text":"Combining existing views into reusable components"}],"type":"paragraph"}],[{"inlineContent":[{"text":"Low","type":"text"}],"type":"paragraph"}]],[[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"View Modifier"}]},{"type":"text","text":" ("},{"type":"reference","identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/ViewModifier","isActive":true},{"type":"text","text":")"}],"type":"paragraph"}],[{"inlineContent":[{"text":"Transforming any view’s rendered buffer (padding, background)","type":"text"}],"type":"paragraph"}],[{"inlineContent":[{"type":"text","text":"Medium"}],"type":"paragraph"}]]],"type":"table","header":"row"},{"inlineContent":[{"type":"text","text":"Most custom views should be "},{"inlineContent":[{"type":"text","text":"composite views"}],"type":"strong"},{"type":"text","text":". For buffer-level transformations, implement a custom "},{"type":"reference","identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/ViewModifier","isActive":true},{"type":"text","text":"."}],"type":"paragraph"},{"type":"heading","text":"Composite Views","anchor":"Composite-Views","level":2},{"inlineContent":[{"type":"text","text":"A composite view implements the "},{"type":"codeVoice","code":"body"},{"type":"text","text":" property to compose existing views. This is the same pattern as SwiftUI:"}],"type":"paragraph"},{"code":["struct StatusHeader: View {","    let title: String","    let version: String","","    var body: some View {","        VStack {","            HStack {","                Text(title)","                    .bold()","                    .foregroundColor(.palette.accent)","                Spacer()","                Text(\"v\\(version)\")","                    .foregroundColor(.palette.foregroundTertiary)","            }","            Divider()","        }","    }","}"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"text":"The ","type":"text"},{"code":"body","type":"codeVoice"},{"text":" property is annotated with ","type":"text"},{"code":"@ViewBuilder","type":"codeVoice"},{"text":" at the protocol level, so you can use all result builder features: conditionals, optionals, loops:","type":"text"}],"type":"paragraph"},{"code":["struct UserCard: View {","    let name: String","    let role: String?","","    var body: some View {","        Panel(title: name) {","            Text(name).bold()","            if let role {","                Text(role)","                    .foregroundColor(.palette.foregroundSecondary)","                    .italic()","            }","        }","    }","}"],"type":"codeListing","syntax":"swift"},{"type":"heading","text":"Accepting Child Content","anchor":"Accepting-Child-Content","level":3},{"inlineContent":[{"text":"To create container-style views that accept child content, use a ","type":"text"},{"type":"codeVoice","code":"@ViewBuilder"},{"text":" closure parameter:","type":"text"}],"type":"paragraph"},{"code":["struct Section<Content: View>: View {","    let title: String","    let content: Content","","    init(title: String, @ViewBuilder content: () -> Content) {","        self.title = title","        self.content = content()","    }","","    var body: some View {","        VStack(alignment: .leading) {","            Text(title)","                .bold()","                .underline()","            content","        }","    }","}","","\/\/ Usage","Section(title: \"Settings\") {","    Text(\"Option A\")","    Text(\"Option B\")","}"],"type":"codeListing","syntax":"swift"},{"type":"heading","text":"Building Custom Containers","anchor":"Building-Custom-Containers","level":3},{"inlineContent":[{"text":"For richer containers, compose existing container views like ","type":"text"},{"type":"reference","isActive":true,"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Panel"},{"text":", ","type":"text"},{"type":"reference","isActive":true,"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Card"},{"text":", or ","type":"text"},{"type":"reference","isActive":true,"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Dialog"},{"text":":","type":"text"}],"type":"paragraph"},{"code":["struct SettingsGroup<Content: View>: View {","    let title: String","    let content: Content","","    init(_ title: String, @ViewBuilder content: () -> Content) {","        self.title = title","        self.content = content()","    }","","    var body: some View {","        Panel(title, borderStyle: .rounded, titleColor: .palette.accent) {","            content","        }","    }","}","","\/\/ Usage","SettingsGroup(\"Network\") {","    Text(\"Proxy: none\")","    Text(\"DNS: auto\")","}"],"type":"codeListing","syntax":"swift"},{"type":"heading","text":"View Modifiers","anchor":"View-Modifiers","level":2},{"inlineContent":[{"text":"A ","type":"text"},{"isActive":true,"type":"reference","identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/ViewModifier"},{"text":" transforms an already-rendered ","type":"text"},{"isActive":true,"type":"reference","identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/FrameBuffer"},{"text":". Use this when your transformation operates on the output of any view:","type":"text"}],"type":"paragraph"},{"code":["struct HighlightModifier: ViewModifier {","    let color: Color","","    func modify(buffer: FrameBuffer, context: RenderContext) -> FrameBuffer {","        \/\/ Transform each line in the buffer","        var result = FrameBuffer()","        for line in buffer.lines {","            result.appendLine(ANSIRenderer.applyPersistentBackground(to: line, color: color))","        }","        return result","    }","}"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"type":"text","text":"Apply it using "},{"type":"codeVoice","code":".modifier(_:)"},{"type":"text","text":":"}],"type":"paragraph"},{"code":["Text(\"Important!\")","    .modifier(HighlightModifier(color: .red))"],"type":"codeListing","syntax":"swift"},{"type":"heading","text":"Convenience Extensions","anchor":"Convenience-Extensions","level":3},{"inlineContent":[{"text":"For a cleaner API, add a ","type":"text"},{"type":"codeVoice","code":"View"},{"text":" extension:","type":"text"}],"type":"paragraph"},{"code":["extension View {","    func highlighted(_ color: Color = .red) -> some View {","        modifier(HighlightModifier(color: color))","    }","}","","\/\/ Usage","Text(\"Important!\").highlighted(.yellow)"],"type":"codeListing","syntax":"swift"},{"type":"heading","text":"When to Use ViewModifier","anchor":"When-to-Use-ViewModifier","level":3},{"inlineContent":[{"type":"text","text":"Use "},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/ViewModifier","isActive":true,"type":"reference"},{"type":"text","text":" when your transformation is a pure buffer-to-buffer operation: adding visual effects, changing backgrounds, or adjusting layout after rendering. The "},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/RenderContext","isActive":true,"type":"reference"},{"type":"text","text":" gives you access to:"}],"type":"paragraph"},{"rows":[[[{"type":"paragraph","inlineContent":[{"text":"Property","type":"text"}]}],[{"type":"paragraph","inlineContent":[{"type":"text","text":"Description"}]}]],[[{"type":"paragraph","inlineContent":[{"type":"codeVoice","code":"availableWidth"}]}],[{"type":"paragraph","inlineContent":[{"type":"text","text":"Maximum width in columns for this view"}]}]],[[{"type":"paragraph","inlineContent"