t","text":"A composite view implements the "},{"type":"codeVoice","code":"body"},{"type":"text","text":" property to compose existing views. This is the same pattern as SwiftUI:"}],"type":"paragraph"},{"syntax":"swift","code":["struct StatusHeader: View {","    let title: String","    let version: String","","    var body: some View {","        VStack {","            HStack {","                Text(title)","                    .bold()","                    .foregroundColor(.palette.accent)","                Spacer()","                Text(\"v\\(version)\")","                    .foregroundColor(.palette.foregroundTertiary)","            }","            Divider()","        }","    }","}"],"type":"codeListing"},{"inlineContent":[{"text":"The ","type":"text"},{"code":"body","type":"codeVoice"},{"text":" property is annotated with ","type":"text"},{"code":"@ViewBuilder","type":"codeVoice"},{"text":" at the protocol level, so you can use all result builder features: conditionals, optionals, loops:","type":"text"}],"type":"paragraph"},{"syntax":"swift","code":["struct UserCard: View {","    let name: String","    let role: String?","","    var body: some View {","        Panel(title: name) {","            Text(name).bold()","            if let role {","                Text(role)","                    .foregroundColor(.palette.foregroundSecondary)","                    .italic()","            }","        }","    }","}"],"type":"codeListing"},{"level":3,"text":"Accepting Child Content","anchor":"Accepting-Child-Content","type":"heading"},{"inlineContent":[{"text":"To create container-style views that accept child content, use a ","type":"text"},{"code":"@ViewBuilder","type":"codeVoice"},{"text":" closure parameter:","type":"text"}],"type":"paragraph"},{"syntax":"swift","code":["struct Section<Content: View>: View {","    let title: String","    let content: Content","","    init(title: String, @ViewBuilder content: () -> Content) {","        self.title = title","        self.content = content()","    }","","    var body: some View {","        VStack(alignment: .leading) {","            Text(title)","                .bold()","                .underline()","            content","        }","    }","}","","\/\/ Usage","Section(title: \"Settings\") {","    Text(\"Option A\")","    Text(\"Option B\")","}"],"type":"codeListing"},{"text":"Building Custom Containers","anchor":"Building-Custom-Containers","level":3,"type":"heading"},{"inlineContent":[{"text":"For richer containers, compose existing container views like ","type":"text"},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Panel","type":"reference","isActive":true},{"text":", ","type":"text"},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Card","type":"reference","isActive":true},{"text":", or ","type":"text"},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Dialog","type":"reference","isActive":true},{"text":":","type":"text"}],"type":"paragraph"},{"syntax":"swift","code":["struct SettingsGroup<Content: View>: View {","    let title: String","    let content: Content","","    init(_ title: String, @ViewBuilder content: () -> Content) {","        self.title = title","        self.content = content()","    }","","    var body: some View {","        Panel(title, borderStyle: .rounded, titleColor: .palette.accent) {","            content","        }","    }","}","","\/\/ Usage","SettingsGroup(\"Network\") {","    Text(\"Proxy: none\")","    Text(\"DNS: auto\")","}"],"type":"codeListing"},{"text":"View Modifiers","anchor":"View-Modifiers","level":2,"type":"heading"},{"inlineContent":[{"text":"A ","type":"text"},{"code":"ViewModifier","type":"codeVoice"},{"text":" transforms an already-rendered ","type":"text"},{"code":"FrameBuffer","type":"codeVoice"},{"text":". Use this when your transformation operates on the output of any view:","type":"text"}],"type":"paragraph"},{"syntax":"swift","code":["struct HighlightModifier: ViewModifier {","    let color: Color","","    func modify(buffer: FrameBuffer, context: RenderContext) -> FrameBuffer {","        \/\/ Transform each line in the buffer","        var result = FrameBuffer()","        for line in buffer.lines {","            result.appendLine(ANSIRenderer.applyPersistentBackground(to: line, color: color))","        }","        return result","    }","}"],"type":"codeListing"},{"inlineContent":[{"text":"Apply it using ","type":"text"},{"code":".modifier(_:)","type":"codeVoice"},{"text":":","type":"text"}],"type":"paragraph"},{"syntax":"swift","code":["Text(\"Important!\")","    .modifier(HighlightModifier(color: .red))"],"type":"codeListing"},{"text":"Convenience Extensions","anchor":"Convenience-Extensions","level":3,"type":"heading"},{"inlineContent":[{"text":"For a cleaner API, add a ","type":"text"},{"code":"View","type":"codeVoice"},{"text":" extension:","type":"text"}],"type":"paragraph"},{"syntax":"swift","code":["extension View {","    func highlighted(_ color: Color = .red) -> some View {","        modifier(HighlightModifier(color: color))","    }","}","","\/\/ Usage","Text(\"Important!\").highlighted(.yellow)"],"type":"codeListing"},{"text":"When to Use ViewModifier","anchor":"When-to-Use-ViewModifier","level":3,"type":"heading"},{"inlineContent":[{"text":"Use ","type":"text"},{"code":"ViewModifier","type":"codeVoice"},{"text":" when your transformation is a pure buffer-to-buffer operation: adding visual effects, changing backgrounds, or adjusting layout after rendering. The ","type":"text"},{"code":"RenderContext","type":"codeVoice"},{"text":" gives you access to:","type":"text"}],"type":"paragraph"},{"rows":[[[{"inlineContent":[{"type":"text","text":"Property"}],"type":"paragraph"}],[{"inlineContent":[{"text":"Description","type":"text"}],"type":"paragraph"}]],[[{"inlineContent":[{"code":"availableWidth","type":"codeVoice"}],"type":"paragraph"}],[{"inlineContent":[{"text":"Maximum width in columns for this view","type":"text"}],"type":"paragraph"}]],[[{"inlineContent":[{"code":"availableHeight","type":"codeVoice"}],"type":"paragraph"}],[{"inlineContent":[{"text":"Maximum height in rows for this view","type":"text"}],"type":"paragraph"}]],[[{"inlineContent":[{"type":"codeVoice","code":"environment"}],"type":"paragraph"}],[{"inlineContent":[{"type":"text","text":"Current "},{"code":"EnvironmentValues","type":"codeVoice"},{"type":"text","text":" (palette, focus manager, etc.)"}],"type":"paragraph"}]]],"header":"row","type":"table"},{"text":"Type Erasure with AnyView","anchor":"Type-Erasure-with-AnyView","level":2,"type":"heading"},{"inlineContent":[{"text":"When you need to store views of different types in a single variable or return different view types conditionally, use ","type":"text"},{"code":"AnyView","type":"codeVoice"},{"text":":","type":"text"}],"type":"paragraph"},{"syntax":"swift","code":["func makeView(isCompact: Bool) -> AnyView {","    if isCompact {","        return AnyView(Text(\"Compact\"))","    } else {","        return AnyView(","            VStack {","                Text(\"Full\")","                Text(\"Layout\")","            }","        )","    }","}"],"type":"codeListing"},{"inlineContent":[{"type":"text","text":"Or use the convenience method:"}],"type":"paragraph"},{"syntax":"swift","code":["let view = Text(\"Hello\").asAnyView()"],"type":"codeListing"},{"inlineContent":[{"type":"codeVoice","code":"AnyView"},{"type":"text","text":" captures the concrete view type in a closure, erasing it at the type level while preserving the rendering behavior."}],"type":"paragraph"},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Prefer concrete types and "},{"type":"codeVoice","code":"some View"},{"type":"text","text":" return types over "},{"type":"codeVoice","code":"AnyView"},{"type":"text","text":". Type erasure should be a last resort when the type system can’t express what you need."}]}],"style":"tip","name":"Tip","type":"aside"}],"kind":"content"}],"abstract":[{"text":"Build your own views by