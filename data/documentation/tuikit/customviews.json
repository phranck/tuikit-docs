ct HighlightModifier: ViewModifier {","    let color: Color","","    func modify(buffer: FrameBuffer, context: RenderContext) -> FrameBuffer {","        \/\/ Transform each line in the buffer","        var result = FrameBuffer()","        for line in buffer.lines {","            result.appendLine(ANSIRenderer.applyPersistentBackground(to: line, color: color))","        }","        return result","    }","}"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"text":"Apply it using ","type":"text"},{"code":".modifier(_:)","type":"codeVoice"},{"text":":","type":"text"}],"type":"paragraph"},{"code":["Text(\"Important!\")","    .modifier(HighlightModifier(color: .red))"],"type":"codeListing","syntax":"swift"},{"level":3,"anchor":"Convenience-Extensions","type":"heading","text":"Convenience Extensions"},{"inlineContent":[{"type":"text","text":"For a cleaner API, add a "},{"code":"View","type":"codeVoice"},{"type":"text","text":" extension:"}],"type":"paragraph"},{"code":["extension View {","    func highlighted(_ color: Color = .red) -> some View {","        modifier(HighlightModifier(color: color))","    }","}","","\/\/ Usage","Text(\"Important!\").highlighted(.yellow)"],"syntax":"swift","type":"codeListing"},{"level":3,"anchor":"When-to-Use-ViewModifier","text":"When to Use ViewModifier","type":"heading"},{"inlineContent":[{"type":"text","text":"Use "},{"type":"codeVoice","code":"ViewModifier"},{"type":"text","text":" when your transformation is a pure buffer-to-buffer operation: adding visual effects, changing backgrounds, or adjusting layout after rendering. The "},{"type":"codeVoice","code":"RenderContext"},{"type":"text","text":" gives you access to:"}],"type":"paragraph"},{"rows":[[[{"inlineContent":[{"type":"text","text":"Property"}],"type":"paragraph"}],[{"inlineContent":[{"text":"Description","type":"text"}],"type":"paragraph"}]],[[{"inlineContent":[{"code":"availableWidth","type":"codeVoice"}],"type":"paragraph"}],[{"inlineContent":[{"text":"Maximum wid