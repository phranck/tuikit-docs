Content":[{"type":"text","text":"Additionally, "},{"type":"codeVoice","code":"Ctrl+C"},{"type":"text","text":" (SIGINT) is handled at the OS signal level "},{"inlineContent":[{"type":"text","text":"before"}],"type":"strong"},{"type":"text","text":" any of these layers: it always terminates the application."}],"type":"paragraph"},{"anchor":"Available-Keys","type":"heading","level":2,"text":"Available Keys"},{"inlineContent":[{"text":"The ","type":"text"},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Key","type":"reference","isActive":true},{"text":" enum defines all keys that TUIkit can recognize from terminal input:","type":"text"}],"type":"paragraph"},{"anchor":"Character-Keys","type":"heading","level":3,"text":"Character Keys"},{"inlineContent":[{"text":"Any printable character is represented as ","type":"text"},{"code":".character(Character)","type":"codeVoice"},{"text":":","type":"text"}],"type":"paragraph"},{"code":[".onKeyPress(Key.from(\"x\")) {","    \/\/ handle \"x\" key","}"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"type":"text","text":"Uppercase detection: when a capital letter is typed, the resulting "},{"isActive":true,"type":"reference","identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/KeyEvent"},{"type":"text","text":" has "},{"type":"codeVoice","code":"shift: true"},{"type":"text","text":" set automatically."}],"type":"paragraph"},{"anchor":"Special-Keys","type":"heading","level":3,"text":"Special Keys"},{"type":"table","rows":[[[{"type":"paragraph","inlineContent":[{"type":"text","text":"Key"}]}],[{"type":"paragraph","inlineContent":[{"text":"Description","type":"text"}]}]],[[{"type":"paragraph","inlineContent":[{"code":".escape","type":"codeVoice"}]}],[{"type":"paragraph","inlineContent":[{"text":"Escape key","type":"text"}]}]],[[{"type":"paragraph","inlineContent":[{"code":".enter","type":"codeVoice"}]}],[{"type":"paragraph","inlineContent":[{"type":"text","text":"Enter \/ Return"}]}]],[[{"type":"paragraph","inlineCont