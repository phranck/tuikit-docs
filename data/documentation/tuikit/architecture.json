r":"doc:\/\/TUIkit\/documentation\/TUIkit\/Menu"},{"text":", ","type":"text"},{"isActive":true,"type":"reference","identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/ProgressView"}]}]},{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"Containers"}],"type":"strong"},{"text":": ","type":"text"},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Card","isActive":true,"type":"reference"},{"text":", ","type":"text"},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Panel","isActive":true,"type":"reference"},{"text":", ","type":"text"},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Alert","isActive":true,"type":"reference"},{"text":", ","type":"text"},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Dialog","isActive":true,"type":"reference"},{"text":", ","type":"text"},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/NavigationSplitView","isActive":true,"type":"reference"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"text":"Data collections","type":"text"}],"type":"strong"},{"type":"text","text":": "},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/List","isActive":true,"type":"reference"},{"type":"text","text":", "},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Table","isActive":true,"type":"reference"},{"type":"text","text":", "},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Section","isActive":true,"type":"reference"}]}]},{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"text","text":"Layout"}]},{"type":"text","text":": "},{"type":"reference","isActive":true,"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/VStack"},{"type":"text","text":", "},{"type":"reference","isActive":true,"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/HStack"},{"type":"text","text":", "},{"type":"reference","isActive":true,"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/ZStack"},{"type":"text","text":", "},{"type":"reference","isActive":true,"id