ent":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"code":"onFocusLost()","type":"codeVoice"}],"type":"strong"},{"type":"text","text":": Called when this element loses focus (default: no-op)"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"code":"handleKeyEvent(_:)","type":"codeVoice"}],"type":"strong"},{"type":"text","text":": Handle a key event while focused; return "},{"code":"true","type":"codeVoice"},{"type":"text","text":" if consumed"}]}]}]},{"inlineContent":[{"text":"A default extension provides sensible defaults for ","type":"text"},{"code":"canBeFocused","type":"codeVoice"},{"text":" (","type":"text"},{"code":"true","type":"codeVoice"},{"text":"), ","type":"text"},{"code":"onFocusReceived()","type":"codeVoice"},{"text":", and ","type":"text"},{"code":"onFocusLost()","type":"codeVoice"},{"text":" (both no-ops). Only ","type":"text"},{"code":"focusID","type":"codeVoice"},{"text":" and ","type":"text"},{"code":"handleKeyEvent(_:)","type":"codeVoice"},{"text":" must be implemented.","type":"text"}],"type":"paragraph"},{"type":"heading","text":"Using FocusState","anchor":"Using-FocusState","level":2},{"type":"paragraph","inlineContent":[{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/FocusState","isActive":true,"type":"reference"},{"type":"text","text":" is the user-facing API for checking and requesting focus inside a view:"}]},{"syntax":"swift","type":"codeListing","code":["let focusState = FocusState(id: \"my-button\", focusManager: context.environment.focusManager)","","\/\/ Check if this element is currently focused","if focusState.isFocused {","    \/\/ render with focus indicator","}","","\/\/ Programmatically request focus","focusState.requestFocus()"]},{"type":"paragraph","inlineContent":[{"type":"text","text":"Built-in views like "},{"isActive":true,"type":"reference","identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Button"},{"type":"text","text":" and "},{"isActive":true,"type":"reference","identifier":"