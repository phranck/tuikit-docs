"type":"text"}]},{"type":"codeListing","syntax":"swift","code":["let focusState = FocusState(id: \"my-button\", focusManager: context.environment.focusManager)","","\/\/ Check if this element is currently focused","if focusState.isFocused {","    \/\/ render with focus indicator","}","","\/\/ Programmatically request focus","focusState.requestFocus()"]},{"type":"paragraph","inlineContent":[{"type":"text","text":"Built-in views like "},{"type":"reference","identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Button","isActive":true},{"type":"text","text":" and "},{"type":"reference","identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Menu","isActive":true},{"type":"text","text":" create their own "},{"type":"codeVoice","code":"FocusState"},{"type":"text","text":" internally: you only need it when building custom focusable views."}]},{"anchor":"Navigation-Keys","text":"Navigation Keys","type":"heading","level":2},{"type":"paragraph","inlineContent":[{"text":"The ","type":"text"},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/FocusManager","isActive":true,"type":"reference"},{"text":" responds to these keys during dispatch:","type":"text"}]},{"rows":[[[{"type":"paragraph","inlineContent":[{"type":"text","text":"Key"}]}],[{"type":"paragraph","inlineContent":[{"text":"Action","type":"text"}]}]],[[{"type":"paragraph","inlineContent":[{"type":"text","text":"Tab"}]}],[{"type":"paragraph","inlineContent":[{"text":"Move focus to the next element","type":"text"}]}]],[[{"type":"paragraph","inlineContent":[{"type":"text","text":"Shift+Tab"}]}],[{"type":"paragraph","inlineContent":[{"type":"text","text":"Move focus to the previous element"}]}]],[[{"type":"paragraph","inlineContent":[{"type":"text","text":"Arrow Down \/ Right"}]}],[{"type":"paragraph","inlineContent":[{"text":"Move focus to the next element","type":"text"}]}]],[[{"type":"paragraph","inlineContent":[{"text":"Arrow Up \/ Left","type":"text"}]}],[{"type":"paragraph","inlineContent":[{"text":"Move focus to the 