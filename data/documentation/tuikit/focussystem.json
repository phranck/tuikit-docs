{"hierarchy":{"paths":[["doc:\/\/TUIkit\/documentation\/TUIkit"]]},"identifier":{"url":"doc:\/\/TUIkit\/documentation\/TUIkit\/FocusSystem","interfaceLanguage":"swift"},"sections":[],"abstract":[{"text":"Navigate between interactive elements using the keyboard.","type":"text"}],"seeAlsoSections":[{"identifiers":["doc:\/\/TUIkit\/documentation\/TUIkit\/StateManagement","doc:\/\/TUIkit\/documentation\/TUIkit\/ThemingGuide","doc:\/\/TUIkit\/documentation\/TUIkit\/StatusBarGuide","doc:\/\/TUIkit\/documentation\/TUIkit\/AppearanceAndColors","doc:\/\/TUIkit\/documentation\/TUIkit\/Preferences","doc:\/\/TUIkit\/documentation\/TUIkit\/CustomViews","doc:\/\/TUIkit\/documentation\/TUIkit\/KeyboardShortcuts","doc:\/\/TUIkit\/documentation\/TUIkit\/PaletteReference","doc:\/\/TUIkit\/documentation\/TUIkit\/ListAndTable","doc:\/\/TUIkit\/documentation\/TUIkit\/LayoutSystem"],"generated":true,"title":"Guides","anchor":"Guides"}],"metadata":{"title":"Focus System","modules":[{"name":"TUIkit"}],"roleHeading":"Article","role":"article"},"schemaVersion":{"major":0,"patch":0,"minor":3},"primaryContentSections":[{"kind":"content","content":[{"anchor":"Overview","text":"Overview","type":"heading","level":2},{"inlineContent":[{"type":"text","text":"TUIkit provides a focus system that lets users move between interactive views (buttons, menus, text fields) using Tab, Shift+Tab, or arrow keys. The system consists of three parts:"}],"type":"paragraph"},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"inlineContent":[{"code":"FocusManager","type":"codeVoice"}],"type":"strong"},{"text":": Tracks which element is focused, handles navigation","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"isActive":true,"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Focusable","type":"reference"}]},{"text":": Protocol that views adopt to receive focus","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"type":"reference","identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/FocusState","isActive":true}]},{"type":"text","text":": Lightweight state object that views use to query and request focus"}]}]}]},{"anchor":"How-Focus-Works","text":"How Focus Works","type":"heading","level":2},{"inlineContent":[{"type":"text","text":"Every frame, the "},{"type":"codeVoice","code":"FocusManager"},{"type":"text","text":" is cleared and interactive views re-register themselves during rendering. This means focus registrations are always in sync with the current view tree: removed views are automatically unregistered."}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"The focus order follows the rendering order: the first focusable view rendered is first in the Tab cycle."}],"type":"paragraph"},{"anchor":"The-Focusable-Protocol","text":"The Focusable Protocol","type":"heading","level":2},{"inlineContent":[{"type":"text","text":"Views that want to receive focus conform to "},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Focusable","isActive":true,"type":"reference"},{"type":"text","text":":"}],"type":"paragraph"},{"code":["public protocol Focusable: AnyObject {","    var focusID: String { get }","    var canBeFocused: Bool { get }","    func onFocusReceived()","    func onFocusLost()","    func handleKeyEvent(_ event: KeyEvent) -> Bool","}"],"type":"codeListing","syntax":"swift"},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"inlineContent":[{"type":"codeVoice","code":"focusID"}],"type":"strong"},{"type":"text","text":": Unique identifier for this focusable element"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"inlineContent":[{"code":"canBeFocused","type":"codeVoice"}],"type":"strong"},{"text":": Whether focus can move to this element (default: ","type":"text"},{"type":"codeVoice","code":"true"},{"text":")","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"type":"codeVoice","code":"onFocusReceived()"}]},{"type":"text","text":": Called when this element gains focus (default: no-op)"}]}]},{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"code":"onFocusLost()","type":"codeVoice"}]},{"text":": Called when this element loses focus (default: no-op)","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"type":"codeVoice","code":"handleKeyEvent(_:)"}],"type":"strong"},{"text":": Handle a key event while focused; return ","type":"text"},{"code":"true","type":"codeVoice"},{"text":" if consumed","type":"text"}]}]}]},{"inlineContent":[{"text":"A default extension provides sensible defaults for ","type":"text"},{"code":"canBeFocused","type":"codeVoice"},{"text":" (","type":"text"},{"code":"true","type":"codeVoice"},{"text":"), ","type":"text"},{"code":"onFocusReceived()","type":"codeVoice"},{"text":", and ","type":"text"},{"code":"onFocusLost()","type":"codeVoice"},{"text":" (both no-ops). Only ","type":"text"},{"code":"focusID","type":"codeVoice"},{"text":" and ","type":"text"},{"code":"handleKeyEvent(_:)","type":"codeVoice"},{"text":" must be implemented.","type":"text"}],"type":"paragraph"},{"anchor":"Using-FocusState","text":"Using FocusState","type":"heading","level":2},{"inlineContent":[{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/FocusState","isActive":true,"type":"reference"},{"type":"text","text":" is the user-facing API for checking and requesting focus inside a view:"}],"type":"paragraph"},{"code":["let focusState = FocusState(id: \"my-button\", focusManager: context.environment.focusManager)","","\/\/ Check if this element is currently focused","if focusState.isFocused {","    \/\/ render with focus indicator","}","","\/\/ Programmatically request focus","focusState.requestFocus()"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"type":"text","text":"Built-in views like "},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Button","type":"reference","isActive":true},{"type":"text","text":" and "},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Menu","type":"reference","isActive":true},{"type":"text","text":" create their own "},{"code":"FocusState","type":"codeVoice"},{"type":"text","text":" internally: you only need it when building custom focusable views."}],"type":"paragraph"},{"anchor":"Navigation-Keys","text":"Navigation Keys","type":"heading","level":2},{"inlineContent":[{"type":"text","text":"The "},{"type":"codeVoice","code":"FocusManager"},{"type":"text","text":" responds to these keys during dispatch:"}],"type":"paragraph"},{"rows":[[[{"inlineContent":[{"type":"text","text":"Key"}],"type":"paragraph"}],[{"inlineContent":[{"type":"text","text":"Action"}],"type":"paragraph"}]],[[{"inlineContent":[{"text":"Tab","type":"text"}],"type":"paragraph"}],[{"inlineContent":[{"type":"text","text":"Move focus to the next element"}],"type":"paragraph"}]],[[{"inlineContent":[{"text":"Shift+Tab","type":"text"}],"type":"paragraph"}],[{"inlineContent":[{"text":"Move focus to the previous element","type":"text"}],"type":"paragraph"}]],[[{"inlineContent":[{"type":"text","text":"Arrow Down \/ Right"}],"type":"paragraph"}],[{"inlineContent":[{"type":"text","text":"Move focus to the next element"}],"type":"paragraph"}]],[[{"inlineContent":[{"type":"text","text":"Arrow Up \/ Left"}],"type":"paragraph"}],[{"inlineContent":[{"type":"text","text":"Move focus to the previous element"}],"type":"paragraph"}]]],"type":"table","header":"row"},{"anchor":"FocusRegistration-Helper","text":"FocusRegistration Helper","type":"heading","level":2},{"inlineContent":[{"type":"text","text":"Built-in interactive views use the internal "},{"code":"FocusRegistration","type":"codeVoice"},{"type":"text","text":" helper to avoid boilerplate. It handles three tasks in one call:"}],"type":"paragraph"},{"type":"orderedList","items":[{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"text":"Persist a focus ID","type":"text"}]},{"type":"text","text":" via "},{"type":"codeVoice","code":"StateStorage"},{"type":"text","text":" so it remains stable across renders"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"inlineContent":[{"text":"Register","type":"text"}],"type":"strong"},{"text":" the handler with the ","type":"text"},{"code":"FocusManager","type":"codeVoice"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"inlineContent":[{"type":"text","text":"Query"}],"type":"strong"},{"type":"text","text":" whether this view currently has focus"}],"type":"paragraph"}]}]},{"inlineContent":[{"text":"Custom views that implement ","type":"text"},{"isActive":true,"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Focusable","type":"reference"},{"text":" typically do not need ","type":"text"},{"code":"FocusRegistration","type":"codeVoice"},{"text":" directly. It is used by the framework’s ","type":"text"},{"code":"_*Core","type":"codeVoice"},{"text":" views (e.g. ","type":"text"},{"code":"_ButtonCore","type":"codeVoice"},{"text":", ","type":"text"},{"code":"_ListCore","type":"codeVoice"},{"text":").","type":"text"}],"type":"paragraph"},{"level":2,"text":"Focus Indicator","anchor":"Focus-Indicator","type":"heading"},{"inlineContent":[{"type":"text","text":"The visual indicator depends on the view type. Buttons and similar controls use a "},{"inlineContent":[{"text":"highlight background bar","type":"text"}],"type":"strong"},{"type":"text","text":" for the focused item. Text fields use "},{"inlineContent":[{"text":"pulsing vertical bars","type":"text"}],"type":"strong"},{"type":"text","text":" (caps) around the input area. Lists and tables use a "},{"inlineContent":[{"type":"text","text":"highlight background"}],"type":"strong"},{"type":"text","text":" for the focused row, with a "},{"inlineContent":[{"type":"text","text":"pulsing accent background"}],"type":"strong"},{"type":"text","text":" when the row is both focused and selected."}],"type":"paragraph"},{"level":2,"text":"Focus in the Event Loop","anchor":"Focus-in-the-Event-Loop","type":"heading"},{"inlineContent":[{"text":"Focus dispatch happens in Layer 2 of the key event pipeline (see ","type":"text"},{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/AppLifecycle","isActive":true,"type":"reference"},{"text":"):","type":"text"}],"type":"paragraph"},{"items":[{"content":[{"inlineContent":[{"type":"text","text":"A key event arrives from stdin"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"Layer 1 (status bar) gets first chance to handle it"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"text":"Layer 2: ","type":"text"},{"code":"KeyEventDispatcher","type":"codeVoice"},{"text":" dispatches to the focused view’s ","type":"text"},{"code":"handleKeyEvent(_:)","type":"codeVoice"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"If not consumed, navigation keys (Tab, arrows) are handled by "},{"type":"codeVoice","code":"FocusManager"}]}]},{"content":[{"inlineContent":[{"type":"text","text":"Layer 3 (default bindings) handles quit, theme cycling, etc."}],"type":"paragraph"}]}],"type":"orderedList"}]}],"variants":[{"paths":["\/documentation\/tuikit\/focussystem"],"traits":[{"interfaceLanguage":"swift"}]}],"kind":"article","references":{"doc://TUIkit/documentation/TUIkit/Focusable":{"title":"Focusable","kind":"symbol","role":"symbol","fragments":[{"text":"protocol","kind":"keyword"},{"text":" ","kind":"text"},{"text":"Focusable","kind":"identifier"}],"url":"\/documentation\/tuikit\/focusable","identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/Focusable","type":"topic","navigatorTitle":[{"text":"Focusable","kind":"identifier"}],"abstract":[{"text":"A protocol for views that can receive focus.","type":"text"}]},"doc://TUIkit/documentation/TUIkit/ListAndTable":{"identifier":"doc:\/\/TUIkit\/documentation\/TUIkit\/ListAndTable","url":"\/documentation\/tuikit\/listandtable